<main class='dashboard-orders'>

  <h1><%= @heading %></h1>
  <% @orders.each do |order| %>
    <h3><%= order.id %></h3>
    <ul>
      <li>Created at: <%= order.created_at %></li>
      <li>Updated at: <%= order.updated_at %></li>
      <li>Status: <%= order.status %></li>
      <li>Total Quantity: <%= order.total_quantity %></li>
      <li>Total Price: <%= order.total_price %></li>
    </ul>
      <% if order.status == 'pending' %>
        <%= button_to "Cancel Order", user_order_path(@user, order), :method => 'delete' %>
      <% end %>

  <% end %>



</main>

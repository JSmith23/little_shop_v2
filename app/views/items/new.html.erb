<main class='add-item'>
  <div class="new">
  <h2>Add Item</h2>
    </div>
  <div class='form'>
  <%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :price %>
    <%= f.number_field :price, min: 1, step: 1 %>
    <%= f.label :inventory %>
    <%= f.number_field :inventory, min: 1 %>
    <%= f.label :thumbnail %>
    <%= f.text_field :thumbnail, :value => '' %>
    <div class="submit">
      <%= f.submit "Create Item", :class => "button" %>
    </div>
  <% end %>
  </div>

</main>

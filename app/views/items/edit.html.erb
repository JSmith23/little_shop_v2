<main class='edit-item'>
  <div class="new">
  <h2>Update Item Information</h2>
    </div>
  <div class='form'>
  <%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :inventory %>
    <%= f.text_field :inventory %>
    <%= f.label :thumbnail %>
    <%= f.text_field :thumbnail%>
    <div class="submit">
      <%= f.submit "Update Item", :class => "button" %>
    </div>
  <% end %>
  </div>

</main>

<main class = "show-item">
  <h1><%= @item.name %></h1>
  <p><%= @item.description %></p>
  <ul>
    <li>Merchant Name: <%= @item.user.name %></li>
    <li>Quantity in Stock: <%= @item.inventory %></li>
    <li>Current Price: <%= @item.price %></li>
  </ul>
  <%= button_to "Add Item", carts_path(item_id: item.id), class: "btn btn-danger" %>
</main>